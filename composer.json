{
  "name": "placetopay/app-version",
  "description": "Provides information about the current app",
  "license": "MIT",
  "authors": [
    {
      "name": "Diego Calle",
      "email": "dnetix@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.2",
    "laravel/framework": "^6.0|^7.0",
    "ext-curl": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "mockery/mockery": "^1.3.0",
    "phpunit/phpunit": "^8.0",
    "orchestra/testbench": "^4.0",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "autoload": {
    "psr-4": {
      "PlacetoPay\\AppVersion\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PlacetoPay\\AppVersion\\Tests\\": "tests"
    }
  },
  "scripts": {
    "php-cs-fixer": "vendor/bin/php-cs-fixer fix --config=.php_cs"
  },
  "minimum-stability": "stable",
  "extra": {
    "laravel": {
      "providers": [
        "PlacetoPay\\AppVersion\\VersionServiceProvider"
      ]
    }
  }
}
